---
const whatsappGeneral = 'https://wa.me/573172247166?text=Hola%2C%20me%20interesa%20conocer%20más%20sobre%20Feral%20Tech';
const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: 'Módulos',
    links: [
      { label: 'Auto TRM', href: '#modulos' },
      { label: 'Rotación de Inventarios', href: '#modulos' },
      { label: 'Cambio de Moneda', href: '#modulos' },
    ],
  },
  {
    title: 'Servicios',
    links: [
      { label: 'Implementación Odoo', href: '#servicios' },
      { label: 'Migración ERP', href: '#servicios' },
      { label: 'Consultoría', href: '#servicios' },
    ],
  },
  {
    title: 'Empresa',
    links: [
      { label: 'Nosotros', href: '#nosotros' },
      { label: 'Contacto', href: whatsappGeneral, external: true },
    ],
  },
];
---

<footer class="relative pt-16 pb-8 sm:pt-20 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-[#0a0633] to-feral-dark"></div>
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-feral-turquoise/20 to-transparent"></div>

  <div class="section-container relative z-10">
    <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-5">
      <!-- Brand -->
      <div class="lg:col-span-2">
        <a href="#inicio" class="flex items-center gap-3 group mb-5">
          <div class="h-10 w-10 rounded-lg bg-gradient-to-br from-feral-turquoise to-feral-steel flex items-center justify-center transition-transform duration-300 group-hover:scale-105">
            <!-- Placeholder: replace with <img src="/logo.png" alt="Feral Tech" class="h-full w-full object-contain" /> -->
            <span class="text-lg font-heading font-bold text-white">FT</span>
          </div>
          <span class="text-lg font-heading font-bold text-white">Feral Tech</span>
        </a>
        <p class="text-sm text-white/50 leading-relaxed max-w-sm">
          Soluciones tecnológicas avanzadas para empresas en Colombia. Especializados en la optimización del ERP Odoo y servicios de productividad.
        </p>
        <p class="mt-3 text-xs font-medium italic text-feral-sky/60">
          Imagina · Crea · Evoluciona
        </p>

        <!-- WhatsApp contact -->
        <a
          href={whatsappGeneral}
          target="_blank"
          rel="noopener noreferrer"
          class="mt-5 inline-flex items-center gap-2 rounded-lg bg-green-600/10 border border-green-500/20 px-4 py-2.5 text-sm text-green-400 transition-all hover:bg-green-600/20"
        >
          <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          +57 317 224 7166
        </a>
      </div>

      <!-- Link columns -->
      {footerLinks.map((group) => (
        <div>
          <h4 class="text-sm font-semibold uppercase tracking-wider text-white/80 mb-4">{group.title}</h4>
          <ul class="space-y-3">
            {group.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  {...(link.external ? { target: '_blank', rel: 'noopener noreferrer' } : {})}
                  class="text-sm text-white/50 transition-colors hover:text-feral-turquoise"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 flex flex-col items-center justify-between gap-4 border-t border-white/10 pt-8 sm:flex-row">
      <p class="text-xs text-white/30">
        &copy; {currentYear} Feral Tech. Todos los derechos reservados.
      </p>
      <p class="text-xs text-white/20">
        Colombia
      </p>
    </div>
  </div>
</footer>
