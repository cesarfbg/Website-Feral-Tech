---
const whatsappTRM = 'https://wa.me/573172247166?text=Hola%2C%20me%20interesa%20el%20módulo%20Auto%20TRM%20para%20Odoo';
const whatsappInventario = 'https://wa.me/573172247166?text=Hola%2C%20me%20interesa%20el%20módulo%20de%20Rotación%20de%20Inventarios';
const whatsappMoneda = 'https://wa.me/573172247166?text=Hola%2C%20me%20interesa%20el%20módulo%20de%20Cambio%20de%20Moneda';

const modules = [
  {
    icon: `<svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`,
    tag: 'Finanzas',
    title: 'Auto TRM - BanRep',
    subtitle: 'Precisión Financiera Diaria',
    painPoint: '¿Cansado de digitar la TRM manualmente y cometer errores?',
    solution: 'Conexión directa con el Banco de la República. Tu contabilidad, siempre al día.',
    cta: 'Automatizar mi TRM',
    href: whatsappTRM,
    accent: 'from-feral-turquoise to-cyan-400',
    iconBg: 'bg-feral-turquoise/10',
    iconColor: 'text-feral-turquoise',
  },
  {
    icon: `<svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/></svg>`,
    tag: 'Inventarios',
    title: 'Rotación de Inventarios',
    subtitle: 'Inteligencia de Stock',
    painPoint: 'Odoo es genial, pero ¿sabes realmente cuándo se agotará tu stock?',
    solution: 'Reportes avanzados de días de inventario restante y sugerencias de compra basadas en consumo real.',
    cta: 'Mejorar mis Reportes de Inventario',
    href: whatsappInventario,
    accent: 'from-feral-sky to-blue-400',
    iconBg: 'bg-feral-sky/10',
    iconColor: 'text-feral-sky',
  },
  {
    icon: `<svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/></svg>`,
    tag: 'Multimoneda',
    title: 'Cambio de Moneda',
    subtitle: 'Currency Swap a 1 click',
    painPoint: 'Cambiar la moneda de una cotización implica rehacerla línea por línea.',
    solution: 'Un clic. Todas las líneas convertidas. Cero reprocesos.',
    cta: 'Automatizar mi Cambio de Moneda',
    href: whatsappMoneda,
    accent: 'from-feral-orange to-amber-400',
    iconBg: 'bg-feral-orange/10',
    iconColor: 'text-feral-orange',
  },
];
---

<section id="modulos" class="relative py-20 sm:py-28 lg:py-32">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-feral-dark via-[#0a0633] to-feral-dark"></div>

  <div class="section-container relative z-10">
    <!-- Section Header -->
    <div class="mx-auto max-w-3xl text-center mb-14 sm:mb-20">
      <span class="mb-4 inline-block text-sm font-semibold uppercase tracking-widest text-feral-turquoise">
        Nuestras Soluciones
      </span>
      <h2 class="text-3xl font-bold sm:text-4xl lg:text-5xl 4xl:text-6xl">
        Potencia tu operación diaria con nuestros
        <span class="bg-gradient-to-r from-feral-turquoise to-feral-sky bg-clip-text text-transparent">
          módulos especializados
        </span>
      </h2>
      <p class="mt-4 text-base text-white/60 sm:text-lg 4xl:text-xl">
        Soluciones diseñadas para resolver los problemas más comunes de las empresas colombianas con Odoo.
      </p>
    </div>

    <!-- Module Cards -->
    <div class="grid gap-6 sm:gap-8 md:grid-cols-2 lg:grid-cols-3">
      {modules.map((mod) => (
        <div class="glass-card group flex flex-col">
          <!-- Icon & Tag -->
          <div class="flex items-center gap-3 mb-5">
            <div class:list={['flex h-14 w-14 items-center justify-center rounded-xl', mod.iconBg, mod.iconColor]}>
              <Fragment set:html={mod.icon} />
            </div>
            <span class="rounded-full bg-white/5 px-3 py-1 text-xs font-medium text-white/50 uppercase tracking-wider">
              {mod.tag}
            </span>
          </div>

          <!-- Content -->
          <h3 class="text-2xl font-bold sm:text-2xl">{mod.title}</h3>
          <p class:list={['mt-1 text-sm font-medium bg-gradient-to-r bg-clip-text text-transparent', mod.accent]}>
            {mod.subtitle}
          </p>

          <!-- Pain Point -->
          <div class="mt-5 flex gap-3 rounded-lg bg-white/5 p-4">
            <svg class="mt-0.5 h-5 w-5 shrink-0 text-feral-orange" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            <p class="text-sm text-white/60">{mod.painPoint}</p>
          </div>

          <!-- Solution -->
          <div class="mt-3 flex gap-3 rounded-lg bg-feral-turquoise/5 p-4">
            <svg class="mt-0.5 h-5 w-5 shrink-0 text-feral-turquoise" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <p class="text-sm text-white/70">{mod.solution}</p>
          </div>

          <!-- CTA -->
          <div class="mt-auto pt-6">
            <a
              href={mod.href}
              target="_blank"
              rel="noopener noreferrer"
              class="group/btn inline-flex items-center gap-2 text-sm font-semibold text-feral-turquoise transition-all hover:text-white"
            >
              {mod.cta}
              <svg class="h-4 w-4 transition-transform group-hover/btn:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
